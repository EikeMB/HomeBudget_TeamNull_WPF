<Window x:Class="HomeBudget_TeamNull_WPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HomeBudget_TeamNull_WPF"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800" SizeToContent="WidthAndHeight">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition Width="0.25*"/>
            <ColumnDefinition Width="0.25*"/>
            <ColumnDefinition Width="0.25*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="50*"/>
            <RowDefinition Height="167*"/>
            <RowDefinition Height="168*"/>
            <RowDefinition Height="50*"/>
        </Grid.RowDefinitions>
        
        <Border Grid.Row="1" Grid.RowSpan="3" Grid.Column="0"
                BorderThickness="2" BorderBrush="Black" Margin="5">
            
        </Border>
        <Grid Grid.Row="1" Grid.RowSpan="3" Grid.Column="0" Grid.ColumnSpan="1"
              Margin="10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="auto"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="0.5*"/>
            </Grid.RowDefinitions>


            <StackPanel Grid.Column="0" Grid.Row="0">
                <TextBlock FontWeight="Bold" FontSize="15">
                    Category Description:
                </TextBlock>
                <TextBox x:Name="DescInput" MaxHeight="100" Height="90" BorderBrush="Black" 
                         GotMouseCapture="DescInput_GotMouseCapture">
                    Description...
                </TextBox>
            </StackPanel>
            
            <StackPanel Grid.Row="1">
                <TextBlock FontWeight="Bold" FontSize="15" Margin="5">
                    Category Type:
                </TextBlock>
                <Border BorderBrush="Black" BorderThickness="1">
                    <StackPanel x:Name="radioBtns">
                        <RadioButton x:Name="income_rdb" Margin="5" IsChecked="True" >Income</RadioButton>
                        <RadioButton Margin="5">Expense</RadioButton>
                        <RadioButton Margin="5">Credit</RadioButton>
                        <RadioButton Margin="5">Savings</RadioButton>
                    </StackPanel>
                </Border>
            </StackPanel>

            <StackPanel Grid.Row="2" Margin="5" Orientation="Horizontal">
                <Button x:Name="add_Cat_btn" Margin="10,5" Height="25" Click="add_Cat_btn_Click">
                    <Button.Resources>
                        <Style TargetType="Border">
                            <Setter Property="CornerRadius" Value="5"/>
                        </Style>
                    </Button.Resources>
                    Add Category
                </Button>
                <Button x:Name="cat_cancel_btn" Margin="10,5" Height="25" Click="cat_cancel_btn_Click">
                    <Button.Resources>
                        <Style TargetType="Border">
                            <Setter Property="CornerRadius" Value="5"/>
                        </Style>
                    </Button.Resources>
                    Cancel
                </Button>
            </StackPanel>
        </Grid>

        
        
        
        
        
        <Button x:Name="cat_preview_btn" Grid.Column="1" Grid.Row="1" Height="50" Width="150"
                FontSize="20" FontWeight="DemiBold" Click="cat_preview_btn_Click">
            <Button.Resources>
                <Style TargetType="Border">
                    <Setter Property="CornerRadius" Value="5"/>
                </Style>
            </Button.Resources>
            Preview
        </Button>
        <Button x:Name="cat_Preview_clear_btn" Grid.Column="1" Grid.Row="2" Height="50" Width="150"
                FontSize="20" FontWeight="DemiBold" Click="cat_Preview_clear_btn_Click">
            <Button.Resources>
                <Style TargetType="Border">
                    <Setter Property="CornerRadius" Value="5"/>
                </Style>
            </Button.Resources>
            Clear Preview
        </Button>
        
        
        
        
        
        <Border Grid.Row="1" Grid.RowSpan="2" Grid.Column="2" Grid.ColumnSpan="2"
                BorderThickness="2" BorderBrush="Black" Margin="5">

        </Border>
        <Grid Grid.Row="1" Grid.RowSpan="2" Grid.Column="2" Grid.ColumnSpan="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="auto"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <StackPanel Margin="15" Grid.Row="0">
                <TextBlock FontWeight="Bold" FontSize="15">
                    Category Desc:
                </TextBlock>
                <TextBlock FontSize="15" Margin="0,5"
                           x:Name="catDescDisplay">

                </TextBlock>
            </StackPanel>
            <StackPanel Margin="15" Grid.Row="1">
                <TextBlock FontWeight="Bold" FontSize="15">
                    Category Type:
                </TextBlock>
                <TextBlock FontSize="15" Margin="0,5"
                           x:Name="catTypeDisplay">

                </TextBlock>
            </StackPanel>


        </Grid>

    </Grid>
</Window>
