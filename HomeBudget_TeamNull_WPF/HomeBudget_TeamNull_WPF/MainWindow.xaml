<Window x:Class="HomeBudget_TeamNull_WPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HomeBudget_TeamNull_WPF"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0.25*"/>
            <ColumnDefinition Width="0.25*"/>
            <ColumnDefinition Width="0.25*"/>
            <ColumnDefinition Width="0.25*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="50*"/>
            <RowDefinition Height="167*"/>
            <RowDefinition Height="168*"/>
            <RowDefinition Height="50*"/>
        </Grid.RowDefinitions>

        <Border BorderThickness="2" Grid.RowSpan="2" Grid.ColumnSpan="2" Grid.Row="1" BorderBrush="Black">
            <StackPanel> 
            <TextBlock HorizontalAlignment="Left" FontSize="20" FontWeight="Bold" Margin="5,10,5,10">Expense: </TextBlock>

                <DatePicker Grid.ColumnSpan="2"  Grid.Row="1" x:Name="dp" Width="Auto" Height="50" Margin="5,5,5,5"></DatePicker>

                <TextBlock Grid.Row="2" Margin="5,0,5,0">Category</TextBlock>
                <ComboBox x:Name="catCB" Grid.Row="2" Grid.Column="1" Margin="5,5,5,5" Height="20"></ComboBox>

                <TextBlock Grid.Row="3" Margin="5,0,5,0">Amount</TextBlock>
                <TextBox x:Name="amountTB" Grid.Row="3" Grid.Column="1" Margin="5,5,5,5" Height="20"></TextBox>

                <TextBlock Grid.Row="4" Margin="5,0,5,0">Description</TextBlock>
                <TextBox x:Name="descriptionTB" Grid.Row="4" Grid.Column="1" Margin="5,5,5,5" Height="20"></TextBox>
            </StackPanel>
        </Border>

        <Button x:Name="saveBtn"  Click="SaveBtn_Click" Grid.Row="3" Margin="5,5,5,5" FontSize="20">Add Expense</Button>
        <Button x:Name="cancelBtn"  Click="CancelBtn_Click" Grid.Row="3" Grid.Column="1" Margin="5,5,5,5" FontSize="20">Cancel Expense</Button>
        
    </Grid>
</Window>
