<Window x:Class="HomeBudget_TeamNull_WPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HomeBudget_TeamNull_WPF"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition Width="0.25*"/>
            <ColumnDefinition Width="0.25*"/>
            <ColumnDefinition Width="0.25*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="50*"/>
            <RowDefinition Height="167*"/>
            <RowDefinition Height="168*"/>
            <RowDefinition Height="50*"/>
        </Grid.RowDefinitions>

        <Border Grid.Row="1" Grid.RowSpan="3" Grid.Column="0"
                BorderThickness="2" BorderBrush="Black" Margin="5">
            
        </Border>
        <Grid Grid.Row="1" Grid.RowSpan="3" Grid.Column="0" Grid.ColumnSpan="1"
              Margin="10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="auto"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="0.5*"/>
            </Grid.RowDefinitions>


            <StackPanel Grid.Column="0" Grid.Row="0">
                <TextBlock FontWeight="Bold" FontSize="15">
                    Category Description:
                </TextBlock>
                <TextBox MaxHeight="100" Height="90" BorderBrush="Black">
                    Desciption...
                </TextBox>
            </StackPanel>
            
            <StackPanel Grid.Row="1">
                <TextBlock FontWeight="Bold" FontSize="15" Margin="5">
                    Category Type:
                </TextBlock><!--
                <ComboBox Margin="5" SelectedIndex="0">
                    <ComboBoxItem>Income</ComboBoxItem>
                    <ComboBoxItem>Expense</ComboBoxItem>
                    <ComboBoxItem>Credit</ComboBoxItem>
                    <ComboBoxItem>Savings</ComboBoxItem>
                </ComboBox>-->
                <Border BorderBrush="Black" BorderThickness="1">
                    <StackPanel>
                        <RadioButton Margin="5">Income</RadioButton>
                        <RadioButton Margin="5">Expense</RadioButton>
                        <RadioButton Margin="5">Credit</RadioButton>
                        <RadioButton Margin="5">Savings</RadioButton>
                    </StackPanel>
                </Border>
            </StackPanel>

            <StackPanel Grid.Row="2" Margin="5" Orientation="Horizontal">
                <Button Margin="10,5" Height="25">
                    <Button.Resources>
                        <Style TargetType="Border">
                            <Setter Property="CornerRadius" Value="5"/>
                        </Style>
                    </Button.Resources>
                    Add Category
                </Button>
                <Button Margin="10,5" Height="25">
                    <Button.Resources>
                        <Style TargetType="Border">
                            <Setter Property="CornerRadius" Value="5"/>
                        </Style>
                    </Button.Resources>
                    Cancel Category
                </Button>
            </StackPanel>
        </Grid>

        <Button Grid.Column="1" Grid.Row="1" Height="50" Width="150">
            Preview
        </Button>

        
    </Grid>
</Window>
